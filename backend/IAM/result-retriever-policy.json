{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ReadProcessedResults",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:GetObjectMetadata",
                "s3:GetObjectVersion"
            ],
            "Resource": "arn:aws:s3:::YOUR_BUCKET_NAME/results/*"
        },
        {
            "Sid": "ListBucket",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::YOUR_BUCKET_NAME",
            "Condition": {
                "StringLike": {
                    "s3:prefix": "results/*"
                }
            }
        }
    ]
}